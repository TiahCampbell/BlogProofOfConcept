@model IEnumerable<blog_template_practice.Models.Category>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Styles/Index.css" rel="stylesheet" type="text/css" />
    <title>Posts by Category</title>
</head>

<container>
    <body>
        <header>
            <h1>Blog Post Categories</h1>
        </header>
        <section class="Index">
            @foreach (var category in Model)
            {
            <div class="Content">
                <a href="/Category/Details/@category.Id"><img src="~/@category.Image" alt="Category Photo"></a>
            </div>
            }
        </section>
        <nav>
            <a href="/Content/Index">All Blog Posts</a>
            <a href="/Category/Index/"> Categories </a>
            <a href="/Content/Create/"> New Blog Post </a>
        </nav>
        <footer>
            &copy; 2021 Tiah Campbell
        </footer>
    </body>
</container>
</html>

